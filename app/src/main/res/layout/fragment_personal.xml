<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PersonalFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="20dp"
            android:text="Trang cá nhân"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView

                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/bg_wall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/cuongnv"
                android:id="@+id/avata"
                android:layout_width="190dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="170dp"
                android:layout_height="190dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/avata"
                app:layout_constraintRight_toRightOf="@+id/avata"
                app:layout_constraintTop_toBottomOf="@+id/avata"
                android:text="Cường Nguyễn"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <Button
                android:text="Chỉnh sửa trang các nhân"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <Button
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_delete"
                android:drawableLeft="@drawable/ic_baseline_restore_from_trash_24"
                app:backgroundTint="@null" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:background="#FFC5CF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/quequan"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:text="Que quan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/hoctap"
                    android:drawableLeft="@drawable/ic_baseline_local_library_24"
                    android:text="PTIT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/thamgia"
                    android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                    android:text="Que quan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->


</ScrollView>